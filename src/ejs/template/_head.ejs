<script>
  document.addEventListener("DOMContentLoaded", () => {

    // === ▼ ハンバーガーメニュー制御 ▼ ===
    const hamburgers = document.querySelector('#hamburgers');
    const overlayMenu = document.getElementById('overlayMenu');
    const body = document.body;

    if (hamburgers && overlayMenu) {
      hamburgers.addEventListener('click', () => {
        const isOpen = overlayMenu.classList.toggle('is-active');
        hamburgers.classList.toggle('is-active');

        // 開いたらスクロール禁止
        if (isOpen) {
          body.classList.add("no-scroll");
        } else {
          body.classList.remove("no-scroll");
        }
      });

      // 背景クリックで閉じる
      overlayMenu.addEventListener('click', (e) => {
        if (e.target.classList.contains("p-cancel")) {
          overlayMenu.classList.remove("is-active");
          hamburgers.classList.remove("is-active");
          body.classList.remove("no-scroll");
        }
      });
    }

    // === ▼ ヘッダー表示制御・ナビ再配置 ▼ ===
    const header = document.querySelector(".l-header");
    const navigation = document.querySelector(".p-navigation");
    const logo = document.querySelector(".p-headerContents__logo");
    const headerContents = document.querySelector(".p-headerContents");

    const breakSP = 990;
    let lastScrollY = window.scrollY;

    const toggleHeaderVisibility = () => {
      const currentScrollY = window.scrollY;
      if (currentScrollY > lastScrollY && currentScrollY > 100) {
        header.classList.add("hidden");
      } else if (currentScrollY < lastScrollY) {
        header.classList.remove("hidden");
      }

      if (window.innerWidth < breakSP) {
        if (currentScrollY > lastScrollY) {
          navigation.style.display = "none";
        } else if (currentScrollY === 0) {
          navigation.style.display = "flex";
        }
      }

      lastScrollY = currentScrollY;
    };

    const resetNavigation = () => {
      if (window.innerWidth >= breakSP) {
        headerContents.insertBefore(navigation, logo.nextSibling);
        navigation.style.display = "";
      } else {
        header.appendChild(navigation);
        navigation.style.display = "flex";
      }
    };

    window.addEventListener("scroll", toggleHeaderVisibility);
    window.addEventListener("resize", resetNavigation);
    resetNavigation();

    // === ▼ ポップアップ（各カテゴリ）制御 ▼ ===
    const overlays = document.querySelectorAll(".p-overlay:not(#overlayMenu)");
    const navLinks = document.querySelectorAll('.p-navigationList__item a[href^="#popup-"]');

    function closeAllOverlays() {
      overlays.forEach(overlay => overlay.classList.remove("is-active"));
      body.classList.remove("no-scroll");
    }

    navLinks.forEach(link => {
      link.addEventListener("click", (e) => {
        e.preventDefault();

        // ハンバーガーメニュー開いていたら閉じる
        if (overlayMenu.classList.contains("is-active")) {
          overlayMenu.classList.remove("is-active");
          hamburgers.classList.remove("is-active");
        }

        const targetId = link.getAttribute("href").replace("#", "");
        const targetOverlay = document.getElementById(targetId);

        if (!targetOverlay) return;

        if (targetOverlay.classList.contains("is-active")) {
          closeAllOverlays();
          return;
        }

        closeAllOverlays();
        targetOverlay.classList.add("is-active");
        body.classList.add("no-scroll");
      });
    });

    overlays.forEach(overlay => {
      overlay.addEventListener("click", (e) => {
        if (e.target.classList.contains("p-cancel")) {
          closeAllOverlays();
        }
      });
    });

  });
</script>


