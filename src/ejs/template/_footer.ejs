<script>
  document.addEventListener("DOMContentLoaded", () => {
      const footerLists = document.querySelectorAll(".p-footerMenu__list");
      const footerBottom = document.querySelector(".p-footerBottom");
      const footer = document.querySelector(".l-footer");

      const updateFooterPadding = () => {
        if (window.innerWidth > 990) {
          footer.style.paddingBottom = `${footerBottom.offsetHeight + 40}px`;
          return;
        }

        const open = document.querySelector(".p-footerMenu__list.is-open .p-contents__list");
        const openHeight = open ? open.scrollHeight : 0;
        const footerHeight = footerBottom ? footerBottom.offsetHeight : 0;
        footer.style.paddingBottom = `${footerHeight + openHeight + 40}px`;
      };

      footerLists.forEach((list) => {
        const title = list.querySelector(".p-footerMenu__title");
        const content = list.querySelector(".p-contents__list");

        title.addEventListener("click", () => {
          if (window.innerWidth > 990) return;

          // 他を閉じる
          footerLists.forEach((item) => {
            if (item !== list) {
              item.classList.remove("is-open");
              item.querySelector(".p-contents__list").style.maxHeight = null;
            }
          });

          // 自分を開閉
          list.classList.toggle("is-open");
          content.style.maxHeight = list.classList.contains("is-open")
            ? `${content.scrollHeight}px`
            : null;

          setTimeout(updateFooterPadding, 300);
        });
      });

      // 初期化
      updateFooterPadding();
      window.addEventListener("resize", updateFooterPadding);
    });
</script>
